<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainRed">
        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/home_sw_resize"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="重庆"
            android:textColor="@color/white"
            android:textSize="@dimen/font_36" />
        <RadioGroup
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <RadioButton
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:id="@+id/news"
                android:button="@null"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tuijian_left_selector"
                android:gravity="center"
                android:text="最新"
                android:textColor="@color/mainRed"
                android:textSize="@dimen/font_36" />

            <RadioButton
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:id="@+id/attention"
                android:button="@null"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tuijian_right_selector"
                android:gravity="center"
                android:text="关注"
                android:textColor="@color/white"
                android:textSize="@dimen/font_36" />
        </RadioGroup>
        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@mipmap/particulars_share" />
    </RelativeLayout>

    <ListView
        android:id="@+id/find_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
</LinearLayout>