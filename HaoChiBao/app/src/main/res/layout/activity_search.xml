<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgGrayWhite">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainRed">
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/left_arrow_white"
            android:layout_centerVertical="true"
            android:padding="10dp"/>
        <EditText
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:text="输入地点、商户名、美食"
            android:textColor="#D6D5D5"
            android:textSize="@dimen/font_28"
            android:background="@drawable/search"
            android:layout_margin="12dp"
            android:drawableRight="@mipmap/search_search"
            android:paddingRight="6dp"
            android:layout_centerInParent="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="有雾20°"
            android:textColor="#F2F2F2"
            android:textSize="@dimen/font_36"
            android:layout_centerVertical="true"
            android:padding="10dp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="时代天街"
            android:textSize="@dimen/font_36"
            android:textColor="#AEAEAE"
            android:background="@drawable/search_two"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="大坪"
            android:textSize="@dimen/font_36"
            android:textColor="#AEAEAE"
            android:background="@drawable/search_two"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="万象城"
            android:textSize="@dimen/font_36"
            android:textColor="#AEAEAE"
            android:background="@drawable/search_two"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="星巴克"
            android:textSize="@dimen/font_36"
            android:textColor="#AEAEAE"
            android:background="@drawable/search_two"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="猫爪烤肉"
            android:textSize="@dimen/font_36"
            android:textColor="#AEAEAE"
            android:background="@drawable/search_two"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="花城心意"
            android:textSize="@dimen/font_36"
            android:textColor="#AEAEAE"
            android:background="@drawable/search_two"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="火锅"
            android:textSize="@dimen/font_36"
            android:textColor="#AEAEAE"
            android:background="@drawable/search_two"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="烤鱼"
            android:textSize="@dimen/font_36"
            android:textColor="#AEAEAE"
            android:background="@drawable/search_two"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="历史记录"
        android:textColor="#BBBBBB"
        android:background="#FFFFFF"
        android:textSize="@dimen/font_32"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/white">
    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="时代天街"
        android:gravity="center_vertical"
        android:textSize="@dimen/font_32"
        android:textColor="#BBBBBB"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:drawableLeft="@mipmap/search_clock"
        android:drawablePadding="5dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/search_delete"
            android:layout_gravity="center_vertical"
            android:padding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="星巴克"
            android:gravity="center_vertical"
            android:textSize="@dimen/font_32"
            android:textColor="#BBBBBB"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@mipmap/search_clock"
            android:drawablePadding="5dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/search_delete"
            android:layout_gravity="center_vertical"
            android:padding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="火锅"
            android:gravity="center_vertical"
            android:textSize="@dimen/font_32"
            android:textColor="#BBBBBB"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@mipmap/search_clock"
            android:drawablePadding="5dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/search_delete"
            android:layout_gravity="center_vertical"
            android:padding="10dp"/>
    </LinearLayout>
</LinearLayout>