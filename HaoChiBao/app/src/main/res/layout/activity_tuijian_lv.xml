<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainRed"
        android:padding="10dp">
       <ImageView
           android:id="@+id/back_btn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/left_arrow_white"
           android:layout_centerVertical="true"
           android:padding="10dp"/>
        <RadioGroup
            android:id="@+id/push_group"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/app_push"
                android:button="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:background="@drawable/tuijian_left_selector"
                android:gravity="center"
                android:text="好吃宝推荐"
                android:padding="5dp"
                android:textColor="@color/mainRed"
                android:textSize="@dimen/font_36" />
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/mine_push"
                android:button="@null"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:background="@drawable/tuijian_right_selector"
                android:gravity="center"
                android:text="我要推荐"
                android:textColor="@color/white"
                android:textSize="@dimen/font_36" />
        </RadioGroup>
        <TextView
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/tuijian_three"
            android:padding="5dp"
            android:text="搜索"
            android:textColor="@color/mainRed"
            android:textSize="@dimen/font_36" />
    </RelativeLayout>
    <ListView
        android:dividerHeight="0dp"
        android:id="@+id/push_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>