<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/food"
    android:gravity="center_vertical">
<LinearLayout
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    >
    <EditText
        android:gravity="center_vertical"
        android:alpha="0.5"
        android:background="@color/textBlack"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/register_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@mipmap/my_tel"
        android:hint="+86| 请输入手机号"
        android:drawablePadding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/textGray"
        android:inputType="number"
        android:textSize="@dimen/font_28"
        />
    <RelativeLayout
        android:alpha="0.5"
        android:background="@color/textBlack"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">
        <EditText
            android:gravity="center_vertical"
            android:background="@null"
            android:paddingLeft="10dp"
            android:id="@+id/SMS_number"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableLeft="@mipmap/pen1"
            android:hint="请输入验证码"
            android:drawablePadding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/textGray"
            android:inputType="number"
            android:textSize="@dimen/font_28"
            android:maxLength="6"
            />
        <Button
            android:id="@+id/send_SMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:button="@null"
            android:background="@drawable/get_yanzheng"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp" />
    </RelativeLayout>

    <EditText
        android:alpha="0.5"
        android:background="@color/textBlack"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableLeft="@mipmap/password"
        android:hint="登录密码"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:drawablePadding="10dp"
        android:textColorHint="@color/textGray"
        android:inputType="text"
        android:textSize="@dimen/font_28"
        android:maxLength="11"
        />
    <EditText
        android:alpha="0.5"
        android:background="@color/textBlack"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/register_re_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableLeft="@mipmap/password"
        android:hint="确认密码"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:drawablePadding="10dp"
        android:textColorHint="@color/textGray"
        android:inputType="text"
        android:textSize="@dimen/font_28"
        android:maxLength="11"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp">
        <CheckBox
            android:id="@+id/checkBox"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意"
            android:button="@drawable/circle_checkbox_style"/>
        <TextView
            android:id="@+id/user_Protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户注册协议》"
            android:textColor="#3399ff"/>
    </LinearLayout>
    <TextView
        android:alpha="0.8"
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="@dimen/font_40"
        android:gravity="center"
        android:background="@drawable/login_btn_style"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"/>
</LinearLayout>